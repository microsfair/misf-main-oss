<project xmlns="http://maven.apache.org/POM/4.0.0" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.tawja</groupId>
        <artifactId>parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <groupId>com.microsfair.oss</groupId>
    <artifactId>parent</artifactId>
    <version>1.0.0-SNAPSHOT</version>
	
    <packaging>pom</packaging>

    <organization>
        <name>Microsfair</name>
        <url>http://www.microsfair.com</url>
    </organization>

    <name>Microsfair : OSS</name>
    <description>Open-Source part of a Micro-Collaborative Platform &amp; Communities of Interests</description>
    <!--<description>Plateforme Micro-Collaborative &amp; Communautés d'Intérêts</description>-->
    <inceptionYear>2015</inceptionYear>

    <url>${project.organization.url}/project/oss/</url>

    <licenses>
        <license>
            <name>Apache 2</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
            <comments>A business-friendly OSS license</comments>
        </license>
    </licenses>
    
    <distributionManagement>
        <site>
            <id>microsfair-website</id>
            <name>Microsfair Documentation Website</name>
            <!-- TODO : Change to have a dedicated OSS Microsfair repository open for everybody (repo.micrsofair.com) with Archiva configuration as a remote -->
            <url>scp://deploy.microsfair.com:8085/var/microsfair/deploy/prod/www/project/oss/</url>
        </site>
        <snapshotRepository>
            <uniqueVersion>false</uniqueVersion>
            <id>microsfair-snapshots</id>
            <name>Microsfair Snapshots Repository</name>
            <url>scp://deploy.microsfair.com:8085/var/microsfair/deploy/prod/www/repo/maven/snapshots</url>
        </snapshotRepository>
        <repository>
            <uniqueVersion>false</uniqueVersion>
            <id>microsfair-releases</id>
            <name>Microsfair Releases Repository</name>
            <url>scp://deploy.microsfair.com:8085/var/microsfair/deploy/prod/www/repo/maven/releases</url>
        </repository>
    </distributionManagement>
    
    <scm>
        <connection>scm:git@github.com:microsfair/misf-main-oss.git</connection>
        <developerConnection>scm:git:git@bitbucket.org:microsfair/misf-main-oss.git</developerConnection>
        <url>https://github.com/microsfair/misf-main-oss/tree/master</url>
        <tag>HEAD</tag>
    </scm>

    <build>
        <extensions>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-ssh</artifactId>
                <version>2.9</version>
            </extension>
        </extensions>
    </build>

</project>
