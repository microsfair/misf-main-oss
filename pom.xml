<project xmlns="http://maven.apache.org/POM/4.0.0" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.tawja</groupId>
        <artifactId>parent</artifactId>
        <version>2015.07.04025015</version>
    </parent>

    <groupId>com.microsfair.oss</groupId>
    <artifactId>parent</artifactId>
    <version>2015.07.04051603</version>
	
    <packaging>pom</packaging>

    <organization>
        <name>Microsfair</name>
        <url>http://www.microsfair.com</url>
    </organization>

    <name>Microsfair : OSS</name>
    <description>Open-Source part of a Micro-Collaborative Platform &amp; Communities of Interests</description>
    <!--<description>Plateforme Micro-Collaborative &amp; Communautés d'Intérêts</description>-->
    <inceptionYear>2015</inceptionYear>

    <url>${project.organization.url}/project/oss</url>

    <licenses>
        <license>
            <name>Apache 2</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
            <comments>A business-friendly OSS license</comments>
        </license>
    </licenses>
    
	<properties>
		<!-- Microsfair Open-Source parts are put in Tawja environment -->
        <organization.domain>tawja.org</organization.domain>
        <!-- Deployment Distribution -->
        <tawja.deploy.protocol>scp</tawja.deploy.protocol>
        <tawja.deploy.host>ftp.tawja.org</tawja.deploy.host>
        <tawja.deploy.deployPath>/home/tawja/deploy</tawja.deploy.deployPath>
        <tawja.deploy.webPath>/home/tawja/www</tawja.deploy.webPath>
        <tawja.deploy.backupPath>/home/tawja/backup</tawja.deploy.backupPath>
        <!-- Deployment Maven Site -->
        <tawja.deploy.site.protocol>scp</tawja.deploy.site.protocol>
        <tawja.deploy.site.host>ftp.tawja.org</tawja.deploy.site.host>
        <tawja.deploy.site.webPath>/home/tawja/www</tawja.deploy.site.webPath>
        <!-- Environment name with tawja-env-* profiles -->
        <tawja.deploy.envName>test</tawja.deploy.envName>
        <tawja.repo.envName>workspace</tawja.repo.envName>
	</properties>
	
    <distributionManagement>
        <site>
            <id>tawja-website</id>
            <name>Microsfair OSS Documentation Website</name>
            <!-- TODO : Change to have a dedicated OSS Microsfair repository open for everybody (repo.micrsofair.com) with Archiva configuration as a remote -->
            <url>${tawja.deploy.site.protocol}://${tawja.deploy.site.host}${tawja.deploy.webPath}/${tawja.deploy.envName}/project/oss</url>
        </site>
        <snapshotRepository>
            <uniqueVersion>false</uniqueVersion>
            <id>tawja-snapshots</id>
            <name>Microsfair OSS Snapshots Repository</name>
            <url>${tawja.deploy.protocol}://${tawja.deploy.host}/${tawja.deploy.webPath}/${tawja.repo.envName}/${organization.domain}/repo/maven/snapshots</url>
        </snapshotRepository>
        <repository>
            <uniqueVersion>false</uniqueVersion>
            <id>tawja-releases</id>
            <name>Microsfair OSS Releases Repository</name>
            <url>${tawja.deploy.protocol}://${tawja.deploy.host}/${tawja.deploy.webPath}/${tawja.repo.envName}/${organization.domain}/repo/maven/releases</url>
        </repository>
    </distributionManagement>
    
    <scm>
        <connection>scm:git@github.com:microsfair/misf-main-oss.git</connection>
        <developerConnection>scm:git:git@bitbucket.org:microsfair/misf-main-oss.git</developerConnection>
        <url>https://github.com/microsfair/misf-main-oss/tree/master</url>
        <tag>HEAD</tag>
    </scm>

    <build>
        <extensions>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-ssh</artifactId>
                <version>2.9</version>
            </extension>
        </extensions>
    </build>

    <repositories>
        <!-- Tawja Snapshots Repository -->
        <repository> 
            <id>twj-snapshots-repository</id> 
            <name>Tawja Snapshots Repository</name>
            <url>http://www.tawja.org/repo/maven/snapshots</url> 
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
        <!-- Tawja Releases Repository -->
        <repository> 
            <id>twj-releases-repository</id> 
            <name>Tawja Releases Repository</name>
            <url>http://www.tawja.org/repo/maven/releases</url> 
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <!-- Tawja Releases LTS Repository -->
        <repository> 
            <id>twj-releases-lts-repository</id> 
            <name>Tawja Releases LTS Repository</name>
            <url>http://repo.tawja.org/maven/releases</url> 
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>	
    <pluginRepositories>
        <!-- Tawja Snapshots Repository -->
        <pluginRepository> 
            <id>twj-snapshots-repository</id> 
            <name>Tawja Snapshots Repository</name>
            <url>http://www.tawja.org/repo/maven/snapshots</url> 
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </pluginRepository>
        <!-- Tawja Releases Repository -->
        <pluginRepository> 
            <id>twj-releases-repository</id> 
            <name>Tawja Releases Repository</name>
            <url>http://www.tawja.org/repo/maven/releases</url> 
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>
        <!-- Tawja Releases LTS Repository -->
        <pluginRepository> 
            <id>twj-releases-lts-repository</id> 
            <name>Tawja Releases LTS Repository</name>
            <url>http://repo.tawja.org/maven/releases</url> 
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>
     </pluginRepositories>

</project>
